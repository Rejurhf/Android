<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:animateLayoutChanges="true"
    tools:context="com.example.rejurhf.a002_fragments.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_panel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        class="com.example.rejurhf.a002_fragments.MainPanelFragment"/>

    <fragment
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/side_panel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        class="com.example.rejurhf.a002_fragments.SidePanelFragment"/>

</RelativeLayout>
